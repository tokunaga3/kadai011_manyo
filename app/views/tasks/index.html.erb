<header>
  <h1>タスク一覧</h1>
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
  <%= form_with model:@task, url: root_path, method: :get,local: true  do |form| %>
  <%= form.text_field :sarch, placeholder:"何かお探しですか？" %>
  <%= form.submit :検索 %>
  <% end %>

</header>
<% if @sarch.present?%>
  <% @tasks = @sarch%>
<% end%>
<table>
  <tr >
    <th>タスク名</th>
    <th>内容</th>
    <th>終了期限</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr >
    <td class="task_name"><%= task.name %></td>
    <td class="task_row"><%= task.content %></td>
    <td><%=l task.deadline %></td>
    <td><%= link_to '詳細を確認する', task_path(task) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task) %></td>
    <td><%= link_to 'タスクを削除する', task_path(task), method: :delete %></td>
  </tr>
  <% end %>
</table>
<%= link_to '新しいタスクを追加', new_task_path %>
