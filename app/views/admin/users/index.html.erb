<header>
  <h1>管理者の一覧画面だよ</h1>
</header>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>アドレス</th>
    <th>タスク数</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= @users.find(user.id).tasks.count %></td>
      <td><%= link_to '詳細を確認する', admin_user_path(user.id) %></td>
      <td><%= link_to "編集する", edit_admin_user_path(user.id) %></td>
      <td><%= link_to '削除する', admin_user_path(user.id), method: :delete %></td>
    </tr>
 <% end %>
</table>
<p><button class="btn btn-default"><%= link_to '新しいユーザを追加', new_admin_user_path %></button></p>
